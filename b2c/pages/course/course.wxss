.player video {
    width: 750rpx;
    height: 422rpx;
}

.main {
    position: fixed;
    left: 0;
    top: 425rpx;
    right: 750rpx;
    bottom: 100rpx;
}

.row {
    display: flex;
    flex-direction: row;
    padding: 0rpx 20rpx 0rpx 20rpx;
    margin-top: 20rpx;
}

.title {
    display: inline-block;
    color: #1F96F2;
    margin-right: 10rpx;
    font-size: 30rpx;
    line-height: 40rpx;
}

.author, .discription, .comment-content {
    flex: 1;
    font-size: 30rpx;
    line-height: 40rpx;
    color: #222222;
}

/* 评论区 */
.comments-box {
    flex-direction: column;
    margin-bottom: 20rpx;
}

.comment-box {
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
}

.comment-box .comment-username {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100rpx;
}

.comment-box .username {
    font-size: 24rpx;
    margin-top: 10rpx;
    width: 100%;
    text-align: center;
    color: #888888;
}

.comment-box .user-image {
    width: 75rpx;
    height: 75rpx;
    display: inline-block;
    border-radius: 4rpx;
}

.comment-box .comment-content {
    position: relative;
    color: #888888;
    margin-left: 15rpx;
    padding: 16rpx;
    border-radius: 10rpx;
    border: 1rpx solid #E6E6E6;
    box-shadow: 0 0 1rpx 1rpx #EEE;
}

/* 评论前面的小箭头 */
.comment-content::before {
    content: "";
    position: absolute;
    width: 13rpx;
    height: 46rpx;
    left: -11rpx;
    top: 0;
    background-image: url(http://omqpd0pt4.bkt.clouddn.com/comment-arrow.png);
}

/* 输入评论区 */
.input-box {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100rpx;
    align-items: center;
    background: #EAEAEA;
    position: fixed;
    bottom: 0;
}

.input-box input, .input-box button {
    height: 60rpx;
    font-size: 30rpx;
    line-height: 60rpx;
}

.input-box input {
    flex: 1;
    background: white;
    border: 1rpx solid #CBCBCB;
    border-radius: 6rpx;
    margin: 20rpx;
    margin-right: 0;
    padding-left: 10rpx;
    padding-right: 10rpx;
}

.input-box button {
    border: 0 solid gray;
    color: #1F96F2;
    margin: 20rpx;
    border: 1px solid #CBCBCB !important;
}
